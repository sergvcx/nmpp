{
    "version": 6,
    "configurePresets": [
        {
            "name": "nmpp-nm6406",
            "displayName": "Configure preset for nm6406 using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
				"ARCH":"nm6406",
                "MC5103_BUILD": "ON",
				"QEMU_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "nmpp-nm6407i",
            "displayName": "Configure preset for nm6407i using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
				"ARCH":"nm6407i",
                "MC12101_BUILD": "ON",
				"QEMU_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "nmpp-nm6407f",
