				"QEMU_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "nmpp-nm6408",
            "displayName": "Configure preset for nm6408 using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
				"ARCH":"nm6408",
                "NM_CARD_BUILD": "ON",
				"QEMU_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
		{
            "name": "nmpp-nm6476i",
            "displayName": "Configure preset for nm6476i using nmc toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "ARCH":"nm6476i",
                "MC11101_BUILD": "ON",
				"QEMU_BUILD": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/nmc-gcc-compile.cmake"
            }
        },
        {
            "name": "nmpp-x64-ninja",
            "displayName": "Configure preset for virtual with ninja",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "ARCH":"x64",
                "X64_BUILD":"ON"
            }
        },
        {
            "name": "nmpp-x64-windows-only",
            "displayName": "Configure preset for virtual with cl compiler",
            "description": "Sets cl compiler",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "set"
             },
            "cacheVariables": {
                "ARCH":"x64",
                "X64_BUILD":"ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            },            
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
              }
        }        
    ],
    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "nmpp-nm6406",
            "configuration": "Release"
        },
        {
            "name": "Debug",
