        {
            "name": "nmpp-x64-ninja",
            "displayName": "Configure preset for virtual with ninja",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build_x64",
            "cacheVariables": {
                "ARCH":"x64",
                "CMAKE_BUILD_TYPE":"Debug",
                "X64_BUILD":"ON"
            }
        },
        {
            "name": "nmpp-x64-windows-only",
            "displayName": "Configure preset for virtual with cl compiler",
            "description": "Sets cl compiler",
            "binaryDir": "${sourceDir}/build_x64",
            "architecture": {
                "value": "x64",
                "strategy": "set"
             },
            "cacheVariables": {
                "ARCH":"x64",
                "X64_BUILD":"ON",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            },            
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }        
